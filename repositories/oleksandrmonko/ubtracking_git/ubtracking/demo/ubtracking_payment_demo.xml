<odoo>

    <record id="ubtracking_payment_1" model="ubtracking.payment">
        <field name="name">Payment for 2025-02-01 for electricity. Amount 500.
            Dated 2025-01-12
        </field>
        <field name="description">prepayment</field>
        <field name="service_name">electricity</field>
        <field name="apartment_id" ref="ubtracking_apartment_1"/>
        <field name="payment_date"
               eval="(datetime.now() - timedelta(days=29*4))"/>
        <field name="billing_period"
